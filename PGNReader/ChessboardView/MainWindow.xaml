<Window x:Class="ChessboardView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessboardView"
        mc:Ignorable="d"
        Title="Chess Board" Height="900" Width="1600" >
    <Grid Name="MainGrid" Background="#302E2B">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Name="LoadFile" Content="Load PGN File" FontSize="10" HorizontalAlignment="Left" VerticalAlignment="Top" Click="LoadFile_Click"/>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">

            <Viewbox Stretch="Uniform"
                     HorizontalAlignment="Center" VerticalAlignment="Center" 
                     MaxWidth="800" MaxHeight="800" MinWidth="200" MinHeight="200">
                <Grid Name="BoardGrid" Width="400" Height="400"/>
            </Viewbox>


            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0" >
                <Button Name ="StartButton" Content="Start" Width="100" Margin="5" Click="StartButton_Click"/>
                <Button Name ="PrevButton" Content="Previous Move" Width="100" Margin="5" Click="PrevButton_Click"/>
                <Button Name ="NextButton" Content="Next Move" Width="100" Margin="5" Click="NextButton_Click"/>
                <Button Name ="EndButton" Content="End" Width="100" Margin="5" Click="EndButton_Click"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>